---
import { Card } from '@/components/Card'
import LinkIcon from '@/components/LinkIcon.astro'
import logoAWS from '@/images/logos/aws.svg'
import logoCodelift from '@/images/logos/codelift.svg'
import logoGithub from '@/images/logos/github.svg'
import Layout from '@/layouts/Simple.astro'

const projects = [
  {
    name: 'AWS Amplify',
    description:
      'Lead for Amplify UI â€“ accessible cloud-connected, cross-framework components.',
    link: {
      href: 'https://ui.docs.amplify.aws/',
      label: 'ui.docs.amplify.aws',
    },
    logo: logoAWS,
  },
  {
    name: 'codelift',
    description: 'Visual Development for Tailwind CSS',
    link: {
      href: 'https://codelift.app/',
      label: 'codelift.app',
    },
    logo: logoCodelift,
  },
  {
    name: 'Click-to-Component',
    description:
      'Option+Click React components in your browser to instantly open the source in VS Code',
    link: {
      href: 'https://github.com/ericclemmons/click-to-component',
      label: 'github.com',
    },
    logo: logoGithub,
  },
  {
    name: 'node-recorder',
    description:
      'Simple recording & replaying of HTTP requests for predictable development & testing.',
    link: {
      href: 'https://github.com/ericclemmons/node-recorder',
      label: 'github.com',
    },
    logo: logoGithub,
  },
  {
    name: 'polydev',
    description:
      'Faster, route-centric development for Node.js apps with built-in Hot Module Replacement.',
    link: {
      href: 'https://github.com/ericclemmons/polydev',
      label: 'github.com',
    },
    logo: logoGithub,
  },
  {
    name: 'mdx-site',
    description: 'Static site generator powered by TypeScript, MDX, & React.',
    link: {
      href: 'https://github.com/ericclemmons/mdx-site',
      label: 'github.com',
    },
    logo: logoGithub,
  },
  {
    name: 'Top Repositories',
    description: 'View more...',
    link: {
      href: 'https://github.com/ericclemmons?tab=repositories&sort=stargazers',
      label: 'github.com',
    },
    logo: logoGithub,
  },
]
---

<Layout
  title="Projects"
  description="I open-source generic solutions for the larger community to benefit from. I also use my share my prototypes that improve DX in the hopes others can benefit."
>
  <Fragment slot="title">A few projects I'm proud of.</Fragment>

  <Fragment slot="intro">
    I open-source generic solutions for the larger community to benefit from. I
    also use my share my prototypes that improve DX in the hopes others can
    benefit.
  </Fragment>

  <ul
    role="list"
    class="grid grid-cols-1 gap-x-12 gap-y-16 sm:grid-cols-2 lg:grid-cols-3"
  >
    {
      projects.map((project) => (
        <Card as="li">
          <div class="relative z-10 flex h-12 w-12 items-center justify-center rounded-full bg-white shadow-md shadow-zinc-800/5 ring-1 ring-zinc-900/5 dark:border dark:border-zinc-700/50 dark:bg-zinc-800 dark:ring-0">
            <img
              alt=""
              class="h-8 w-8 rounded-full bg-white"
              src={project.logo}
            />
          </div>
          <h2 class="mt-6 text-base font-semibold text-zinc-800 dark:text-zinc-100">
            <Card.Link href={project.link.href}>{project.name}</Card.Link>
          </h2>
          <Card.Description>{project.description}</Card.Description>
          <p class="relative z-10 mt-6 flex text-sm font-medium text-zinc-400 transition group-hover:text-fuchsia-500 dark:text-zinc-200">
            <LinkIcon className="h-6 w-6 flex-none" />
            <span class="ml-2">{project.link.label}</span>
          </p>
        </Card>
      ))
    }
  </ul>
</Layout>
